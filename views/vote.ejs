        background: hsl(0, 0%, 98%);
      }
      .os {
        --primary: hsl(0, 0%, 100%);
        --other: hsl(0, 0%, 100%);
        background: hsl(0, 0%, 100%);
      }
    
      h1 {
        color: white;
        border-bottom: 2px solid var(--other);
    
        text-decoration-line:underline ;
        text-decoration-thickness:4px ;
        text-shadow: 1px 1px 15px #252424;
      }
  
      label {
       
        justify-content: flex-start;
        align-items: center;
        flex-wrap: nowrap;
        margin: 12px 0;
        color: white;
        cursor: pointer;
        position: relative;
        text-shadow: 1px 1px 0px #252424;
      }
      /* input */
      input {
        opacity: 0;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        z-index: -1;
      }
      /* .design */
      .design {
        width: 16px;
        height: 16px;
        border: 1px solid var(--other);
        border-radius: 100%;
        margin-right: 36px;
        position: absolute;
      }
      .design::before,
      .design::after {
        content: "";
        display:block;
        width: inherit;
        height: inherit;
        border-radius: inherit;
        position: absolute;
        transform: scale(0);
        transform-origin: center center;
      }
      .design:before {
        background: var(--other);
        opacity: 0;
        transition: 0.3s;
      }
      .design::after {
        background: var(--primary);
        opacity: 0.4;
        transition: 0.6s;
      }
      /* .text */
      .text {
        color: white;
        font-weight: bold;
      }
      /* checked state */
      input:checked + .design::before {
        opacity: initial;
        transform: scale(0.6);
      }
      /* other states */
      input:hover + .design,
      input:focus + .design {
        border: 1px solid var(--primary);
      }
      input:hover + .design:before,
      input:focus + .design:before {
        background: var(--primary);
      }
      input:hover ~ .text {
        color: var(--primary);
        
      }
      input:focus + .design::after,
      input:active + .design::after {
        opacity: 0.1;
        transform: scale(2.6);
      }
